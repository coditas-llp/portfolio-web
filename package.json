{
  "name": "coditas-portfolio",
  "version": "1.0.14",
  "description": "Coditas Portfolio",
  "author": "Harish Soni",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coditas-llp/portfolio-web/"
  },
  "keywords": [
    "react",
    "coditas-portfolio"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "babel": {
    "presets": [
      "@babel/env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build",
    "build:npm": "rm -rf dist && mkdir dist && babel ./src/ -d dist --extensions \".tsx,.ts\"  --copy-files",
    "publish:npm": "npm run build:npm && npm publish",
    "build:win": "rmdir /S /Q dist && mkdir dist && babel ./src/ -d dist --extensions \".tsx,.ts\" --copy-files",
    "publish:win": "npm run build:win && npm publish"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.2",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-standard": "^4.1.0",
    "gh-pages": "^5.0.0",
    "microbundle-crl": "^0.13.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "typescript": "^5.0.4"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "axios": "^1.4.0",
    "date-fns": "^2.30.0",
    "node-sass": "^6.0.1",
    "react-markdown-renderer": "^1.4.0",
    "react-router-dom": "^6.11.1"
  }
}
